<Window x:Class="Grid_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Button Content="Строка 0, Столбец 0" FontSize="20" Grid.Column="0" Grid.Row="0"></Button>
        <Button Content="Объединение 3 столбиков (колонок)" FontSize="20" Grid.Row="1" Grid.ColumnSpan="3"></Button>
        <Button Content="Строка 2, Столбец 2" FontSize="20" Grid.Column="2" Grid.Row="2"></Button>
    </Grid>
</Window>
